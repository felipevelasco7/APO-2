<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cajafuerte.control.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="CAJA FUERTE" textAlignment="CENTER">
      <font>
         <Font name="Arial Black" size="15.0" />
      </font></Label>
   <Label text="Escriba la combinacion para iniciar" />
   <HBox prefHeight="0.0" prefWidth="200.0">
      <children>
         <PasswordField fx:id="pf1" onKeyPressed="#onKeyPressed" onKeyTyped="#onKeyTyped" />
         <PasswordField fx:id="pf2" onKeyPressed="#onKeyPressed" onKeyTyped="#onKeyTyped" />
         <PasswordField fx:id="pf3" onKeyPressed="#onKeyPressed" onKeyTyped="#onKeyTyped" />
         <PasswordField fx:id="pf4" onKeyPressed="#onKeyPressed" onKeyTyped="#onKeyTyped">
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
         </PasswordField>
         <PasswordField fx:id="pf5" onKeyPressed="#onKeyPressed" onKeyTyped="#onKeyTyped" />
         <PasswordField fx:id="pf6" onKeyPressed="#onKeyPressed" onKeyTyped="#onKeyTyped" />
      </children></HBox>
    <Button fx:id="abrirButton" onAction="#onAbrirButton" text="ABRIR" wrapText="true" />
</VBox>
