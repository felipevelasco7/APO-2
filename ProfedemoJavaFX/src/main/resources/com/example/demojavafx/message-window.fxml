<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demojavafx.control.MessageController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label fx:id="lblMessage" text="Here would be the message" />
      <Button mnemonicParsing="false" onAction="#onReturn" text="Return" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="btnInfo" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#onInfo" text="Info" />
            <Button fx:id="btnError" mnemonicParsing="false" onAction="#onError" text="Error" />
            <Button fx:id="btnConfirmation" mnemonicParsing="false" onAction="#onConfirmation" text="Confirmation" />
         </children>
         <effect>
            <Blend />
         </effect>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </HBox>
   </children>
</VBox>
